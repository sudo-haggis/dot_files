{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker", "docker-compose"],
    "allowUnsandboxedCommands": true
  },

  "permissions": {
    "deny": [
      "Read(~/.ssh/*)",
      "Edit(~/.ssh/*)",
      "Read(~/.aws/*)",
      "Edit(~/.aws/*)",
      "Read(~/.gnupg/*)",
      "Edit(~/.gnupg/*)",
      "Edit(~/.bashrc)",
      "Edit(~/.zshrc)",
      "Edit(~/.dotfiles/*)",
      "Read(.env)",
      "Read(.env.*)"
    ],
    "allow": [
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(node *)"
    ]
  },

  "attribution": {
    "gitCommitMessage": "Co-authored-by: Claude <claude@anthropic.com>",
    "gitTrailer": ""
  }
}
